    <%- include('header'); -%>

    <div class="box" id="heading">
        <h1><%= title %></h1>
    </div>
    

    <div class="box">
        <% newListItems.forEach(item => { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input name="checkbox" value="<%= item._id %>" onchange="this.form.submit()" type="checkbox">
                    <p><%= item.name %></p>  
                </div>
                <div>
                    <input type="hidden" name="listName" value=<%= title %>>
                </div>
            </form>
       <% }) %>
           
        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Task" autocomplete="off" autofocus>
            <button type="submit" name ="list" value=<%= title %> >+</button>
        </form>
    </div>
    
    <%- include('footer'); -%>
  


    